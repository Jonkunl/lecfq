<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answer_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/vote_up_button"
            android:layout_width="16dip"
            android:layout_height="8dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="4dip"
            android:layout_marginRight="12dip"
            android:background="@drawable/vote_up" />

        <TextView
            android:id="@+id/upvotes_num"
            android:layout_width="40dip"
            android:layout_height="32dip"

            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >

    </TextView>
    <TextView
        android:id="@+id/answerer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        >

    </TextView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/vote_down_button"
            android:layout_width="16dip"
            android:layout_height="8dip"
            android:layout_marginLeft="12dip"
            android:layout_marginTop="4dip"
            android:layout_marginRight="12dip"
            android:background="@drawable/vote_down" />

        <TextView
            android:id="@+id/downvotes_num"
            android:layout_width="40dip"
            android:layout_height="32dip"

            android:ellipsize="marquee"
            android:gravity="center"
            android:singleLine="true"
            android:text="0"
            android:textSize="14sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
